<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>7 Wonders Game Tracker</title>
    <script src="https://unpkg.com/htmx.org@1.9.10"></script>
    <style>
      body {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        margin: 0;
        padding: 20px;
      }
      h1,
      h2 {
        color: #333;
      }
      input,
      button,
      select {
        margin: 5px 0;
        padding: 5px;
      }
      ul {
        list-style-type: none;
        padding: 0;
      }
      li {
        margin-bottom: 10px;
      }
      .player-input {
        margin-bottom: 10px;
        display: flex;
        align-items: center;
      }
      .player-input button {
        margin-left: 10px;
      }
    </style>
  </head>
  <body>
    <h1>7 Wonders Game Tracker</h1>

    <h2>Add Game</h2>
    <form
      id="gameForm"
      hx-post="/add-game"
      hx-target="#game-history"
      hx-swap="innerHTML"
    >
      <div id="players"></div>
      <button type="button" onclick="addPlayer()">Add Player</button>
      <button type="submit">Save Game</button>
    </form>

    <h2>Game History</h2>
    <div id="game-history" hx-get="/game-history" hx-trigger="load"></div>

    <h2>Stats</h2>
    <div id="stats" hx-get="/stats" hx-trigger="load"></div>

    <!-- Hidden div to store civilizations data -->
    <div
      id="civData"
      data-civilizations="<%= JSON.stringify(civilizations) %>"
      style="display: none"
    ></div>

    <script>
      const civilizationsData =
        document.getElementById("civData").dataset.civilizations;
      const civilizations = JSON.parse(civilizationsData);
      let playerCount = 0;

      function addPlayer() {
        if (playerCount >= 7) {
          alert("Maximum 7 players allowed");
          return;
        }
        playerCount++;
        const playerDiv = document.createElement("div");
        playerDiv.className = "player-input";
        playerDiv.id = `player-${playerCount}`;
        playerDiv.innerHTML = `
                <input type="text" name="players[${
                  playerCount - 1
                }][name]" placeholder="Player Name" required>
                <select name="players[${
                  playerCount - 1
                }][civilization]" required>
                    ${civilizations
                      .map((civ) => `<option value="${civ}">${civ}</option>`)
                      .join("")}
                </select>
                <input type="number" name="players[${
                  playerCount - 1
                }][points]" placeholder="Points" required>
                <button type="button" onclick="removePlayer(${playerCount})">Remove</button>
            `;
        document.getElementById("players").appendChild(playerDiv);
      }

      function removePlayer(id) {
        const playerDiv = document.getElementById(`player-${id}`);
        if (playerDiv) {
          playerDiv.remove();
          playerCount--;
        }
      }

      // Add initial player input
      addPlayer();
    </script>
  </body>
</html>
