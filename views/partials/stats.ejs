<div class="space-y-8">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <% players.forEach(function(player) { %>
    <div class="bg-gray-800 rounded-lg shadow-lg p-6">
      <h3 class="text-2xl font-bold text-center mb-4"><%= player %></h3>
      <div class="flex justify-between items-center mb-4">
        <div class="text-center">
          <p class="text-sm text-gray-400">Total Wins</p>
          <p class="text-3xl font-bold text-green-500">
            <%= playerStats[player].totalWins %>
          </p>
        </div>
        <div class="text-center">
          <p class="text-sm text-gray-400">Total Games</p>
          <p class="text-3xl font-bold text-blue-500">
            <%= playerStats[player].totalGames %>
          </p>
        </div>
        <div class="text-center">
          <p class="text-sm text-gray-400">Win Rate</p>
          <p class="text-3xl font-bold text-yellow-500">
            <%= ((playerStats[player].totalWins /
            playerStats[player].totalGames) * 100).toFixed(2) %>%
          </p>
        </div>
      </div>
    </div>
    <% }); %>
  </div>

  <div class="overflow-x-auto">
    <table class="min-w-full bg-gray-800 border border-gray-700">
      <thead class="bg-gray-900">
        <tr>
          <th
            class="px-6 py-3 border-b border-gray-700 text-left text-xs leading-4 font-medium text-gray-300 uppercase tracking-wider"
          >
            Civilization
          </th>
          <% players.forEach(function(player) { %>
          <th
            class="px-6 py-3 border-b border-gray-700 text-left text-xs leading-4 font-medium text-gray-300 uppercase tracking-wider"
          >
            <%= player %>
          </th>
          <% }); %>
        </tr>
      </thead>
      <tbody class="bg-gray-800">
        <% civilizations.forEach(function(civ, index) { %>
        <tr class="<%= index % 2 === 0 ? 'bg-gray-800' : 'bg-gray-750' %>">
          <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-700">
            <div class="text-sm leading-5 font-medium text-gray-300">
              <%= civ %>
            </div>
          </td>
          <% players.forEach(function(player) { %>
          <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-700">
            <% if (playerStats[player].civilizations[civ].totalGames > 0) { %>
            <div class="text-sm leading-5">
              <span class="text-gray-400">Games: </span>
              <span class="text-blue-400"
                ><%= playerStats[player].civilizations[civ].totalGames %></span
              >
            </div>
            <div class="text-sm leading-5">
              <span class="text-gray-400">Wins: </span>
              <span class="text-green-400"
                ><%= playerStats[player].civilizations[civ].wins %></span
              >
            </div>
            <div class="text-sm leading-5">
              <span class="text-gray-400">Winrate: </span>
              <span
                class="<%= parseFloat(playerStats[player].civilizations[civ].winrate) > 50 ? 'text-green-400' : 'text-red-400' %>"
              >
                <%= playerStats[player].civilizations[civ].winrate %>%
              </span>
            </div>
            <div class="text-sm leading-5">
              <span class="text-gray-400">Avg Points: </span>
              <span class="text-yellow-400"
                ><%= playerStats[player].civilizations[civ].avgPoints %></span
              >
            </div>
            <div class="text-sm leading-5">
              <span class="text-gray-400">Max Points: </span>
              <span class="text-purple-400"
                ><%= playerStats[player].civilizations[civ].maxPoints %></span
              >
            </div>
            <% } else { %>
            <div class="text-sm leading-5 text-gray-500 italic">
              No games played
            </div>
            <% } %>
          </td>
          <% }); %>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</div>
